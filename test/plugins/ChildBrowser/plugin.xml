<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.phonegap.plugins.childbrowser"
    version="3.0.4">

    <name>Child Browser</name>

    <access origin="build.phonegap.com" />
    <access origin="s3.amazonaws.com" />

    <!-- android -->
    <platform name="android">
        <xml-graft file="AndroidManifest.xml" xpath="/manifest/application">
            <activity android:name="com.phonegap.plugins.childBrowser.ChildBrowser"
                      android:label="@string/app_name">
                <intent-filter>
                </intent-filter>
            </activity>
        </xml-graft>

        <!-- Cordova 1.5 - 1.9 -->
        <xml-graft file="res/xml/plugins.xml" xpath="/plugins">
            <plugin name="ChildBrowser"
                value="com.phonegap.plugins.childBrowser.ChildBrowser"/>
        </xml-graft>

        <!-- Cordova 2.0.0 -->
        <xml-graft file="res/xml/config.xml" xpath="/cordova/plugins">
            <plugin name="ChildBrowser"
                value="com.phonegap.plugins.childBrowser.ChildBrowser"/>
        </xml-graft>
    </platform>
    <!-- ios -->
    <platform name="ios">
        <plist-add key="ChildBrowser"
                    string="ChildBrowserCommand" />

        <!-- framework for testing (not actual dependency of ChildBrowser -->
        <framework src="libsqlite3.dylib" />
    </platform>
</plugin>
